  <h2>Book detail</h2>
  <table>
    <tr>
      <th>
        <%= link_to user_path(user.id) do %>
         <%= image_tag book.user.get_profile_image(100,100) %>
        <% end %>
      </th>
      <th>
        <%= link_to book_path(book.id) do %>
         <%= @book.title %>
         <% end %>
        </th>
      <th><%= @book.body %></th>
      
    </tr>
  </table>
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>