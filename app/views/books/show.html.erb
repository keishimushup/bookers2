  <%= render 'list', user: @user, book: @book%>


  <h2>Book detail</h2>
  <table>
    <tr>
      <td>
        <%= link_to user_path(@books.id) do %>
         <%= image_tag @books.user.get_profile_image(100,100) %>
        <% end %>
        <br>
        <%= link_to user_path(@books.user.id) do %>
         <%= @books.user.name %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(@books.id) do %>
         <%= @books.title %>
         <% end %>
        </td>
      <td><%= @books.body %></td>
      <td>
        <% if @books.user == current_user %>
         <%= link_to "Edit", edit_book_path(@books.id) %>
        <% end %>
      </td>
      <td>
        <% if @books.user == current_user %>
         <%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に削しますか？" %>
        <% end %>
      </td>

    </tr>
  </table>
