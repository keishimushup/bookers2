<h2>User info</h2>
<%= image_tag @books.user.get_profile_image(100,100) %>

<table>
    <tbody>
        <tr>
            <th>name</th>
            <th><%= @books.user.name %></th>
        </tr>
        <tr>
            <th>introduction</th>
            <th><%= @books.user.introduction %></th>
        </tr>
    </tbody>
</table>

<div>
   <%= link_to "設定アイコン", edit_user_path(@user.id) %>
</div>


<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  <%= render 'list', user: @books %>
  
  <%= render 'list', user: @user %>

　<%= render 'list', book: @book %>

  <h2>Book detail</h2>
  <table>
    <tr>
      <td>
        <%= link_to user_path(@books.id) do %>
         <%= image_tag @books.user.get_profile_image(100,100) %>
        <% end %>
        <br>
        <%= link_to user_path(@books.user.id) do %>
         <%= @books.user.name %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(@books.id) do %>
         <%= @books.title %>
         <% end %>
        </td>
      <td><%= @books.body %></td>
      <td>
        <% if @books.user == current_user %>
         <%= link_to "Edit", edit_book_path(@books.id) %>
        <% end %>
      </td>
      <td>
        <% if @books.user == current_user %>
         <%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に削しますか？" %>
        <% end %>
      </td>

    </tr>
  </table>
