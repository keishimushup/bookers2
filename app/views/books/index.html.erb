<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %>

<table>
    <tbody>
        <tr>
            <th>name</th>
            <th><%= @user.name %></th>
        </tr>
        <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
        </tr>
    </tbody>
</table>

<div>
  <%= link_to "設定アイコン", edit_user_path(current_user.id) %>
</div>

<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  <h2>Books</h2>
  <table>
    <thead>
      <td>
       <td></td>
       <td>Title</td>
       <td>Opinion</td>
       <td colspan="3"></td>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.id) do %>
           <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
           <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
