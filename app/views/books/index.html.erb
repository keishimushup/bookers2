<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <th>
          <%= link_to user_path(user.id) do %>
           <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
        </th>
        <th>
          <%= link_to book_path(book.id) do %>
           <%= book.title %>
          <% end %>
        </th>
        <th><%= book.body %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
