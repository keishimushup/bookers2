<div class="col-md-3">
  <%= render 'books/list', user: @user, book: @book%>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Users</h2>

  <table>
    <thead>
      <tr>
       <td>Image</td>
       <td>name</td>
       <td colspan="3"></td>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.get_profile_image(100,100) %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= link_to "Show", user_path(user.id)  %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
