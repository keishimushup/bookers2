<%= render 'books/list', user: @user, book: @book%>

<h2>Users</h2>

<table>
    <thead>
      <tr>
       <td>Image</td>
       <td>name</td>
       <td colspan="3"></td>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.get_profile_image(100,100) %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= link_to "show", user_path(user.id)  %>
        </td>
      </tr>
      <% end %>
    </tbody>
