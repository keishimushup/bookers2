<div class="col-md-3">
  <%= render 'books/list', user: @user, book: @book%>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
       <td></td>
       <td>Title</td>
       <td>Opinion</td>
       <td colspan="3"></td>
      </tr>
    </thead>

    <tbody>
     <% @books.each do |book| %>
     <tr>
       <td>
         <%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(100,100) %>
         <% end %>
       </td>
       <td>
         <%= link_to book_path(book.id) do %>
          <%= book.title %>
         <% end %>
       </td>
       <td>
         <%= book.body %>
       </td>
      </tr>
      <% end %>
    </table>
</div>
  

